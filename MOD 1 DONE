#beautiful {
  font-family: Cambria;
  color: #07ff7f;
  font-size: 20px;
  margin-left: 20px;
}

.ugly {
  font-family: Arial;
  color: #ff0000;
  font-size: 10px;
  margin-left: 10px;
}

